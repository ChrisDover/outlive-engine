# ── Database ──────────────────────────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://outlive:YOUR_PASSWORD@localhost:5432/outlive_engine
POSTGRES_PASSWORD=YOUR_PASSWORD

# ── JWT / Auth (REQUIRED — app will refuse to start without these) ────────────
# Generate: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET=
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=30

# ── Field Encryption (REQUIRED) ──────────────────────────────────────────────
# Generate: openssl rand -base64 32
FIELD_ENCRYPTION_KEY=

# ── TLS (optional, for mTLS in production) ────────────────────────────────────
TLS_CERT_PATH=
TLS_KEY_PATH=

# ── AI / LLM ─────────────────────────────────────────────────────────────────
# Default: Ollama local. For cloud: set URL + API key + model.
AIRLLM_BASE_URL=http://localhost:11434/v1
AIRLLM_API_KEY=
AIRLLM_MODEL=llama3.1

# ── CORS (REQUIRED — do not use ["*"]) ───────────────────────────────────────
ALLOWED_ORIGINS=["http://localhost:3000"]

# ── Service Auth (Next.js → FastAPI) ─────────────────────────────────────────
# Generate: openssl rand -hex 32
SERVICE_API_KEY=
